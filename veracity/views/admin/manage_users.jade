extends ../layout

block content
	.row
		h1.col-sm-4.col-sm-offset-1= title
		#message.col-sm-10.col-sm-offset-1
		include ./_add_user
		.col-sm-10.col-sm-offset-1#users
			table.table.table-hover
				thead
					tr
						th Name
						th Email
						th Date Added
						th(colspan=2) Administrator
						th
						th
						th
				tbody
					each user, i in userlist
						tr
							td #{user.name.full}
							td #{user.email}
							td #{moment(user.create_time).format("MM/DD/YY")}
							if user.admin
								td Yes
								td
									button.btn.btn-info.btn-sm.demote(value='#{user._id}') Demote
							else
								td No
								td
									button.btn.btn-success.btn-sm.promote(value='#{user._id}') Promote
							td
								button.btn.btn-warning.btn-sm.reset(value='#{user._id}') Reset Password
							td
								button.btn.btn-danger.btn-sm.remove(value='#{user._id}') Remove
