extends ./index.jade
block content
	h1=section_title
	#stories
		.row
			.col-xs-12.col-md-8
				.row
					.col-md-12.featured
						.thumbnail
							a(href="article/#{featured._id}") 
								img(src="/index/image/#{featured._id}")
							.caption
								h4 #{featured.title}
								p #{featured.subtitle}
								p
									a(href="article/#{featured._id}") read more
				.row
					each article, i in articlelist
						.col-md-6
							.thumbnail
								a(href="article/#{article._id}") 
									img(src="/index/image/#{article._id}")
								.caption
									h4 #{article.title}
									p #{article.subtitle}
									p
										a(href="article/#{article._id}") read more
			.col-xs-12.col-md-4
				h3=sub_section_title
				.thumbnail
					a(href="article/#{sidebar._id}") 
						img(src="/index/image/#{sidebar._id}")
					.caption
						p #{sidebar.subtitle}
						p
							a(href="article/#{sidebar._id}") read more
