extends ./layout

block content
	.row
		#message
		h1.col-sm-7.col-sm-offset-1.hidden-xs=title + ' : ' + user.name.full
		h1.visible-xs.col-xs-6=title
		.col-md-2.col-md-offset-1.col-sm-3.col-sm-offset-1.col-xs-4.col-xs-offset-2
			ul.list-inline.pull-right
				li: button#changePass.btn.btn-warning.btn-lg.btn-circle(value='#{user._id}', title='Change password', data-toggle="modal", data-target="#passModal")
					span.glyphicon.glyphicon-lock
				li: button#editInfo.btn.btn-info.btn-lg.btn-circle(value='#{user._id}', title='Edit info', data-toggle="modal", data-target="#infoModal")
					span.glyphicon.glyphicon-pencil
	include _update_info
	include _change_password
	hr.col-md-10.col-md-offset-1.col-sm-12
	.row
		.col-md-3.col-md-offset-2.col-sm-4.col-sm-offset-1.col-xs-6.col-xs-offset-3
			img.img-responsive.img-circle(src="/staff/image/#{user._id}")
			br
		.col-lg-3.col-lg-offset-2.col-md-4.col-md-offset-2.col-sm-6.col-sm-offset-1.col-xs-10.col-xs-offset-1
			p
				strong Email: 
				| #{user.email}
			p
				strong Twitter: 
				| #{user.twitter}
			p
				strong Role: 
				| #{user.role}
			p
				strong Articles: 
				| #{user.articles.length}
			p
				strong Bio: 
				| #{user.bio}