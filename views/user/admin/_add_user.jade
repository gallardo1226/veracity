.col-sm-10.col-sm-offset-1
	form#formAddUser.form-inline(name="adduser",method="post",action="/admin/adduser",role="form")
		.form-group
			label.sr-only(for="#inputFirst") Enter first name
			input#inputFirst.form-control(required, type="text", placeholder="John", name="userfirst")
		.form-group
			label.sr-only(for="#inputLast") Enter last name
			input#inputLast.form-control(required, type="text", placeholder="Smith", name="userlast")
		.form-group
			label.sr-only(for="#inputEmail") Enter email
			input#inputEmail.form-control(required, type="email", placeholder="john.smith@email.com", name="useremail")
		.form-group
			label.sr-only(for="#inputRole") Enter last name
			input#inputRole.form-control(required, type="text", placeholder="Writer", name="userrole")
		button#btnSubmit.btn.btn-default(type="submit") Submit